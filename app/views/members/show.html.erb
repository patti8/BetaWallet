<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= @team.team_name %></h1>
    <p><%= @team.description %></p> 
</div>

<div class="row mb-5">
    <div class="col d-flex align-items-center justify-content-center">
    
    <%= form_with url: "/transactions/toFriend", method: :get, data: {turbo: false} do |form| %>
        
        <ul class="list-group list-group-horizontal text-center shadow">
            <li class="list-group-item">
                <%= form.text_field :search_username, class: "form-control", placeholder: "eg. 50,0000,000" %>
            </li>
            <li class="list-group-item">
                <%= form.submit "Deposit Your Money", class: "btn btn-custom1 text-white"%>
            </li>
        </ul>   

    <% end %>

    </div>
</div>

<div class="row">
    <div class="col">
        <ul class="list-group">

            <li class="list-group-item active" aria-current="true">
                <small>Amount</small><h3><i>Rp.</i> <%= @team.balance %></h3>
            </li>

            <li class="list-group-item">Add Member</li>
            <li class="list-group-item">Withdraw</li>

        </ul>
    </div>

    <div class="col">
        <ul class="list-group">

            <li class="list-group-item bg-warning" aria-current="true">
                Member Team
            </li>

            <li class="list-group-item">Add Team</li>
            <li class="list-group-item">Withdraw</li>

            </ul>
    </div>
</div>
 