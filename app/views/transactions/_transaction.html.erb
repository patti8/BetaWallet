<div class="container m-3">
    <% if notice.present? %>
        <div class="alert alert-success" role="alert">
            <%= notice %>
        </div
    <% end %>

    <% if flash[:error].present? %>
        <div class="alert alert-warning" role="alert">
            <%= flash[:error] %>
        </div>
    <% end %>

    <% if transaction.present? %>
        <div class="row">
            <div class="col">
                <div class="table-responsive">
            
                    <table class="table table-striped table-sm">
        
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">ID TRANSACTION</th>
                                <th scope="col">TYPE</th>
                                <th scope="col">AMOUNT</th>
                                <th scope="col">SOURCE WALLET</th>
                                <th scope="col">TARGET WALLET</th>
                                <th scope="col">DATE</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% transaction.each_with_index do |tr, index| %>
                                <tr>
                                    <td><%= index+=1%></td>
                                    <td><%= tr.id %></td>
                                    <td><%= tr.type %></td>
                                    <td><small><b>Rp.</b></small><%= tr.amount %></td>

                                    <td>
                                        <small>
                                            TYPE: <b><%= TransactionHelper.type_description(tr.source_wallet)  %></b>
                                            <br>
                                            DESCRIPTION : <b><%= TransactionHelper.user_or_team_description(tr.source_wallet)  %></b>
                                        </small>
                                    </td>

                                    <td>
                                        <small>
                                            TYPE: <b><%= TransactionHelper.type_description(tr.target_wallet)  %></b>
                                            <br>
                                            DESCRIPTION : <b><%= TransactionHelper.user_or_team_description(tr.target_wallet)  %></b>
                                        </small>
                                    </td>
                                    
                                    <td><%= tr.created_at %></td>
                                </tr>
                            <% end %>
                            
                        </tbody>
                        
                    </table>

                </div>
            </div>
        </div>

    <% else %>
        <div class="alert alert-warning" role="alert">
            data tidak ditemukan
        </div>
    <% end %>
</div>