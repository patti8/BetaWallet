<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Transfer</h1>   
</div>

<div class="d-flex align-items-center justify-content-center">
    
    <div class="card card-bg m-2 mt-5">

        <div class="card-body">

            <%= form_for @transfer, url: "/transactions/sendMoney" do |f| %>
                
                <div class="mb-3">
                    <%= f.label :target_wallet, class: "form-label" %>
                    <%= f.text_field :target_wallet, class: "form-control", value: @target_wallet.id, autofocus: true,  :disabled => true %>
                    <input type="text" class="form-control" value="<%= @target_wallet.first_name + ' ' + @target_wallet.last_name %>" autofocus="true" disabled>
                </div>

                <div class="mb-3">
                    <%= f.label :amount, class: "form-label" %>
                    <%= f.number_field :amount, class: "form-control", autofocus: true %>
                </div>

                <div class="mb-3">
                    <%= f.submit "Send Money", class: "btn btn-custom1"%>
                </div>

            <% end %>

        </div>

    </div>
    
</div>
 